                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control entry-content" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
